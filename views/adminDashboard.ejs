<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/adminDash.css" />
    <title>Admin Dashboard</title>
    <link rel="icon" type="image/jpg" href="/images/prayingHands.jpg" />
  </head>
  <body>
    <nav
      class="navbar navbar-expand-lg"
      style="background-color: rgb(243, 194, 103); padding: 20px"
    >
      <div class="container">
        <a
          class="navbar-brand fs-4"
          href="/"
          style="color: #703734; font-weight: 500"
          >OpenHands</a
        >
        <button
          class="navbar-toggler shadow-none border-0"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a
                class="nav-link"
                href="#"
                style="color: #946131; font-weight: 500"
                >Pending Requests
                <span id="pendingRequestsCount" class="badge bg-dark"></span
              ></a>
            </li>
          </ul>
          <a
            class="btn btn rounded-4 ms-3"
            style="
              background-color: #946131;
              color: white;
              outline: 1px solid #703734;
            "
            >Log Out</a
          >
        </div>
      </div>
    </nav>

    <div class="container my-4">
      <!-- Confirmation Message -->
      <div
        class="alert alert-dismissible fade show d-none"
        id="confirmationMessage"
        role="alert"
      >
        <span id="confirmationText"></span>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>

      <div class="row">
        <!-- Requests Column -->
        <div class="col-lg-6 mb-4">
          <div class="list-group" id="requestsList"></div>
        </div>

        <!-- Request Details Column -->
        <div class="col-lg-6">
          <div id="requestDetailsColumn" class="card p-3 shadow-sm">
            <h5 class="card-title fw-bold text-center">Request Details</h5>
            <div class="mb-3">
              <h6 class="fw-bold">Title:</h6>
              <p id="requestHeadingDisplay"></p>
            </div>
            <div class="mb-3">
              <h6 class="fw-bold">Need:</h6>
              <p id="requestneedAmountDisplay"></p>
            </div>
            <div class="mb-3">
              <h6 class="fw-bold">Description:</h6>
              <p id="requestDescriptionDisplay"></p>
            </div>
            <div class="mb-3">
              <h6 class="fw-bold">Uploaded Image:</h6>
              <img
                id="requestImageDisplay"
                src=""
                class="img-fluid rounded"
                alt="Uploaded Image"
              />
            </div>
            <div class="mb-3">
              <h6 class="fw-bold">Documents:</h6>
              <a
                id="downloadDocumentButton"
                href=""
                download
                class="btn btn-secondary btn-sm"
                ><i class="fa fa-download"></i> Download Document</a
              >
            </div>
            <div class="d-grid gap-2">
              <button
                class="btn btn-success btn-lg accept-btn"
                data-request-id=""
              >
                ACCEPT REQUEST
              </button>
              <button
                class="btn btn-danger btn-lg reject-btn"
                data-request-id=""
              >
                REJECT REQUEST
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script type="module" src="./js/adminDashboard.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
